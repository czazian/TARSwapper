<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TARSwapper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">#FFFFFF</item>  <!-- Status Bar color -->
    </style>

    <style name="Theme.TARSwapper" parent="Base.Theme.TARSwapper" />
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="imgButtonStyle">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="CustomEditTextStyle" parent="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/small_tarswapper_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.TARSwapper</item>
    </style>

</resources>