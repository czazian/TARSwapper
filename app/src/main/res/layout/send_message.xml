<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/msgItemOwn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_box_own"
        android:elevation="10dp"
        android:padding="18dp"
        android:text="This is a bag that I wanted to sell and it has been 5 years with me."
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/ownMessageImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/ai"
        android:visibility="gone" />

    <VideoView
        android:id="@+id/ownMessageVideo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTimeMsgOwn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:text="22:00 â€¢ 24/8/24" />

        <ImageView
            android:id="@+id/readMsgStateIcon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/checkyes"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
