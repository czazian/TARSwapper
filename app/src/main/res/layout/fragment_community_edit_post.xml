<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_add_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityEditPost"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addProductHeader"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#756AB6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/myPostedProductTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="6"
            android:shadowDy="6"
            android:shadowRadius="2"
            android:text="Edit Post"
            android:textColor="#FFFFFF"
            android:textSize="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/ripple_effect"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_chevron_left_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addProductHeader"
        app:layout_constraintVertical_bias="0.0"
        android:paddingStart="16dp"
        android:paddingTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addProductForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp">


            <EditText
                android:id="@+id/titleED"
                android:layout_width="360dp"
                android:layout_height="39dp"
                android:background="#F2F2FF"
                android:text="Have a look at my post"
                android:hint="Title"
                android:paddingStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/descriptionED"
                android:layout_width="360dp"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:paddingStart="8dp"
                android:background="#F2F2FF"
                android:text="This is fun"
                android:hint="What you want to share today"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLines="5"
                android:minLines="1"
                android:scrollbars="vertical"
                app:layout_constraintStart_toStartOf="@+id/titleED"
                app:layout_constraintTop_toBottomOf="@+id/titleED" />


            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Upload images:"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/descriptionED"
                app:layout_constraintTop_toBottomOf="@+id/descriptionED" />

            <ImageButton
                android:id="@+id/addImgBtn"
                android:layout_width="95dp"
                android:layout_height="129dp"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_add_24"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="wrap_content"
                android:layout_height="129dp"
                app:layout_constraintBottom_toBottomOf="@+id/addImgBtn"
                app:layout_constraintStart_toEndOf="@+id/addImgBtn"
                app:layout_constraintTop_toBottomOf="@+id/textView20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- RecyclerView to display selected images horizontally -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_images"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/product_image" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Product Tag: "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/addImgBtn"
                app:layout_constraintTop_toBottomOf="@+id/addImgBtn" />


            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="Select"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView22"
                app:layout_constraintStart_toEndOf="@+id/textView22"
                app:layout_constraintTop_toTopOf="@+id/textView22" />

            <ListView
                android:id="@+id/productTagListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22"
                tools:listitem="@layout/product_list_hori" />

            <RadioGroup
                android:id="@+id/blogStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productTagListView"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/radioOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_lock_open_24"
                    android:text="Public"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>

                <RadioButton
                    android:id="@+id/radioOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_lock_outline_24"
                    android:text="Private"
                    android:paddingStart="8dp"/>

            </RadioGroup>

            <Button
                android:id="@+id/btnCreatePost"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:backgroundTint="#AC87C5"
                android:layout_marginTop="20dp"
                android:text="Post"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blogStatus" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>