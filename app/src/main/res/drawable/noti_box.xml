<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#AA000000" /> <!-- Semi-transparent black for the shadow effect -->
        </shape>
    </item>

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#00000000" /> <!-- Transparent color for the outer shadow -->
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="4px"
        android:left="5px"
        android:right="5px"
        android:top="0px">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- White Border -->
    <item>
        <shape>
            <solid android:color="@android:color/white" /> <!-- Background color is white -->
            <corners android:radius="5dp" /> <!-- Radius for rounded corners -->
            <stroke
                android:width="1dp"
                android:color="@color/white" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
