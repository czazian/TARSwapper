<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" /> <!-- Adjust shadow color -->
            <corners android:radius="16dp" /> <!-- Adjust radius -->
        </shape>
    </item>

    <!-- Optional Blur Effect Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" /> <!-- Adjust blur color -->
            <corners android:radius="16dp" /> <!-- Adjust radius -->
        </shape>
    </item>
</layer-list>